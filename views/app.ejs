<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href ="/css/app.css">
        <script src="https://kit.fontawesome.com/7693dbed32.js" crossorigin="anonymous"></script>

      

    </head>

    <body>
        <header>
            <div class="header">
                <img class = "logo" src ="/images/logo.png">
                <!-- <div class="logo-name">PriorityNest</div> -->
                <div class="header-right">
                    <a  href="/">Home</a>
                    <a class="" href="#">
                        <i class="far fa-bell fa-lg"></i>
                    </a>
                    <a href="#">
                        <i class="fas fa-user-circle fa-lg"></i>
                    </a>
                    <!-- <a href="signup">signup</a> -->
                </div>
                </div>
        </header>
        <section>
            <div class ="section-header">
                PriorityNest App
            </div>

        <div style="width:70%; padding-left:20%;">
            <div class="task-details">

                <form action="priorityNest" method="POST">
                    <label for="description">Description</label><br>
                    <input type="text" placeholder="Description..." name="description" required><br>
               
                    <label for="category">Category</label><br>
                    <select name="category" id="category"><br>
                        <option value="volvo">Personal</option>
                        <option value="saab">Work</option>
                        <option value="opel">Academic</option>
                        <option value="audi">Household</option>
                        <option value="audi">Business</option>
                        <option value="audi">Other</option>
                      </select><br>
               
               
                    <label for="duedate">Due Date</label><br>
                    <input id="date"type="date"  name="duedate" >

                </form>
         
                    
                
                <button type="submit">
                    Add Task
                </button>
                <button type ="submit">
                    delete task
                </button>
               

            </div>



            <div class="task">
                <ul>
                    <% for (let i of toDo_App){ %>
                         <li>
                            <div class="task_div">
                   
                                <span class="task_description">
                                    <input type="checkbox" name="desc" >
                                    <!-- <label >This is a sample description  </label><br> -->
                                    <label for ="desc"><%=i.description %> </label><br>
                                  
                                </span>
                                
                                <!-- <span class="task_category">Work</span><br> -->
                                <span class="task_category"><%=i.category %></span><br>
                               <span id="calender-icon"><i class="fas fa-calendar-alt"></i></span>
                                <!-- <span class="task_date">26-12-2020</span> -->
                                <span class="task_date"><%=i.duedate %></span>
            
                            </div>
                        </li>
                    <%} %>

                </ul>
                
                

               

            </div>
        </div>

        </section>
        


    </body>
</html>